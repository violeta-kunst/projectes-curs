---
const pages = [
  { name: 'INICI', link: '/' },
  { name: 'QUI SOM', link: '/qui som' },
  { name: 'LA CARTA', link: '/carta' },
  { name: 'RESERVES', link: '/reserves' }
];
---
<nav>
  <ul>
    {pages.map(page => (
      <li><a href={page.link}>{page.name}</a></li>
    ))}
  </ul>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%; 
    text-align: center;
    padding: 1rem;
    background: url('/imatges/index.png') no-repeat center center fixed;
    background-size: cover;

  }
  ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: center;
  }
  li {
    margin: 0 3rem;
  }
  a {
    color: #FFBD59;
    text-decoration: none;
    font-weight: bold;
    font-size: large;
    font-family: 'Open Sans';
  }
  a:hover {
    color: white
  }
</style>
